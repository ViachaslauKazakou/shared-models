# Database Configuration
# PostgreSQL URL format: postgresql+psycopg2://username:password@host:port/database_name
# SQLite URL format: sqlite:///./database_name.db

# PostgreSQL (рекомендуемо для продакшена)
DATABASE_URL=postgresql+psycopg2://docker:docker@localhost:5433/postgres

# Или SQLite для разработки
# DATABASE_URL=sqlite:///./shared_models.db

# Database Pool Settings (для PostgreSQL)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Environment
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=INFO
